{
	"name": "material-demo",
	"version": "0.1.0",
	"description": "material demo app",
	"main": "app.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/codepolitan/material-demo.git"
	},
	"keywords": [
		"material",
		"user",
		"interface",
		"demo"
	],
	"author": "Code Politan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/codepolitan/material-demo/issues"
	},
	"homepage": "https://github.com/codepolitan/material-demo#readme",
	"dependencies": {
		"express": "^3.0",
		"material": "^0.0.6"
	},
	"devDependencies": {
		"babelify": "^7.2.0",
		"browserify": "^12.0.1",
		"exorcist": "^0.4.0",
		"gulp": "^3.9.0",
		"gulp-browserify": "^0.5.1",
		"gulp-concat": "^2.6.0",
		"gulp-hub": "^0.7.1",
		"gulp-less": "^3.0.5",
		"gulp-livereload": "^3.8.1",
		"gulp-sourcemaps": "^1.6.0",
		"gulp-util": "^3.0.7",
		"require-dir": "^0.3.0",
		"vinyl-buffer": "^1.0.0",
		"vinyl-source-stream": "^1.1.0"
	},
	"scripts": {
		"build-material": "browserify -r material -t [ babelify --presets es2015 ] --debug | exorcist build/material.js.map > build/material.js",
		"build-css": "lessc node_modules/material/lib/skin/material/material.less > dist/skin/material.css",
		"build-demo": "browserify dist/demo/app.js -x material --debug -o 'exorcist build/demo.js.map > build/demo.js' -v",
		"watch-demo": "watchify -x material --debug dist/demo/main.js -o 'exorcist build/demo.js.map > build/demo.js' -v",
		"watch-flickr": "watchify -x material --debug dist/flickr/main.js -o 'exorcist build/flickr.js.map > build/flickr.js' -v",
		"watch": "npm run watch-lib & npm run watch-css",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"browserify": {
		"transform": [
			[
				"babelify",
				{
					"presets": [
						"es2015"
					]
				}
			]
		]
	}
}
